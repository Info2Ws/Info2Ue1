#include <stdio.h>
#include <stdlib.h>



void clearBuffer()
{
	char Dummy;
	
	do
	{
		scanf("%c", &Dummy);
	} while (Dummy != '\n')
}




int main()
{
	char c = ' ';
	int i = 0;
	int scanErg;
	
	do
	{
		printf("Zahl:\n);
		scanErg = scanf("%i", &i);
		if (c != '\n')
			clearbuffer();
		if (scanErg != 1)
			printf("Fehler!\n");
	} while (i !=5);
		
		return 0;
}
